<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.MaximDao">
    <insert id="insert">
        INSERT INTO blog_maxim (`context`, `state`)
        VALUES (#{context}, #{state});
    </insert>

    <update id="edit">
        UPDATE blog_maxim
        <set>
            <if test="context != null">
                `context` = #{context},
            </if>
            <if test="state != null">
                `state` = #{state}
            </if>
        </set>
        WHERE id=#{id};
    </update>

    <delete id="delete" parameterType="int">
      DELETE FROM blog_maxim WHERE id=#{id};
    </delete>

    <select id="selectAll" resultType="com.isyxf.blog.entity.Maxim">
      SELECT * FROM blog_maxim;
    </select>
</mapper>