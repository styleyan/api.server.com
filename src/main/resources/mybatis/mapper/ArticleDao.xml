<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.ArticleDao">
    <sql id="fields">classify_id,gmt_create,gmt_modify,id,state,title,url</sql>

    <insert id="insert">
      INSERT INTO blog_article (`classify_id`, `title`, brief, `content`, `url`, `state`)
      VALUES (#{classifyId}, #{title}, #{brief}, #{content}, #{url}, #{state});
    </insert>

    <delete id="delete" parameterType="int">
      DELETE FROM blog_article WHERE id=#{id}
    </delete>

    <update id="update">
      UPDATE blog_article
      <set>
          <if test="classifyId != null">
              classify_id = #{classifyId},
          </if>
          <if test="title != null">
              `title` = #{title},
          </if>
          <if test="brief != null">
              `brief` = #{brief},
          </if>
          <if test="content != null">
              `content` = #{content},
          </if>
          <if test="url != null">
              `url` = #{url},
          </if>
          <if test="state != null">
              `state` = #{state}
          </if>
      </set>
      WHERE id=#{id};
    </update>

    <select id="selectById" parameterType="int" resultType="com.isyxf.blog.entity.Article">
      SELECT <include refid="fields"/>,content FROM blog_article WHERE id=#{id}
    </select>

    <select id="selectPage" resultType="com.isyxf.blog.entity.Article">
      SELECT <include refid="fields"/>,brief FROM blog_article ORDER BY gmt_create
    </select>

    <select id="archiveList" resultType="com.isyxf.blog.entity.Article">
      SELECT id,title, classify_id,gmt_create,url FROM blog_article ORDER BY gmt_create DESC;
    </select>
</mapper>