<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.LinkDao">
    <insert id="insert">
        INSERT INTO link (`website_name`, `website_url`, `desc`, `https`)
        VALUES (#{websiteName},#{websiteUrl},#{desc},#{https});
    </insert>

    <delete id="delete" parameterType="int">
      DELETE FROM link WHERE id=#{id};
    </delete>

    <update id="update">
      UPDATE link
      <set>
          <if test="websiteName != null">
              `website_name` = #{websiteName},
          </if>
          <if test="websiteUrl != null">
              `website_url` = #{websiteUrl},
          </if>
          <if test="desc != null">
              `desc` = #{desc},
          </if>
          <if test="https != null">
              `https` = #{https}
          </if>
      </set>
      WHERE id=#{id};
    </update>

    <select id="selectAll" resultType="com.isyxf.blog.entity.Link">
      SELECT * FROM link;
    </select>
</mapper>