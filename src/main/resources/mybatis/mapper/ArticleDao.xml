<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.ArticleDao">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO blog_article (`classify_id`, `title`, brief, `content`, `url`, `state`, `tags`)
      VALUES (#{classifyId}, #{title}, #{brief}, #{content}, #{url}, #{state}, #{tags});
    </insert>

    <delete id="delete" parameterType="int">
      DELETE FROM blog_article WHERE id=#{id}
    </delete>

    <update id="update">
      UPDATE blog_article
      <set>
          <if test="classifyId != null">
              classify_id = #{classifyId},
          </if>
          <if test="title != null">
              `title` = #{title},
          </if>
          <if test="brief != null">
              `brief` = #{brief},
          </if>
          <if test="content != null">
              `content` = #{content},
          </if>
          <if test="url != null">
              `url` = #{url},
          </if>
          <if test="state != null">
              `state` = #{state},
          </if>
          <if test="tags != null">
              `tags` = #{tags}
          </if>
      </set>
      WHERE id=#{id};
    </update>

    <select id="selectById" parameterType="int" resultType="com.isyxf.blog.entity.Article">
        SELECT
        id,state,title,url,tags,classify_id,content
        FROM blog_article
        WHERE id=#{id};
    </select>

    <select id="search" parameterType="String" resultType="com.isyxf.blog.entity.Article">
        SELECT id,state,gmt_create,gmt_modify,title,url,tags,classify_id,brief
        FROM blog_article
        <where>
            <if test="search != null">
                title LIKE '%${search}%'
            </if>
            <if test="state != -1">
                AND state = #{state}
            </if>
        </where>
    </select>

    <select id="archiveList" resultType="com.isyxf.blog.entity.Article">
        SELECT id,gmt_create,title,url,classify_id
        FROM blog_article
        WHERE state = 1
    </select>

    <select id="selectByUrl" resultType="com.isyxf.blog.entity.Article">
        SELECT id,state,gmt_create,gmt_modify,title,url,tags,classify_id,content
        FROM blog_article
        WHERE state = 1 AND url=#{url};
    </select>

</mapper>