<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.ArticleDao">
    <sql id="field">
        article.id,
        article.state,
        article.gmt_create,
        article.gmt_modify,
        article.title,
        article.url,
        article.tags,
        classify.title as classify_title
        from blog_article as article
        inner join blog_classify as classify on article.classify_id = classify.id
    </sql>
    <insert id="insert">
      INSERT INTO blog_article (`classify_id`, `title`, brief, `content`, `url`, `state`, `tags`)
      VALUES (#{classifyId}, #{title}, #{brief}, #{content}, #{url}, #{state}, #{tags});
    </insert>

    <delete id="delete" parameterType="int">
      DELETE FROM blog_article WHERE id=#{id}
    </delete>

    <update id="update">
      UPDATE blog_article
      <set>
          <if test="classifyId != null">
              classify_id = #{classifyId},
          </if>
          <if test="title != null">
              `title` = #{title},
          </if>
          <if test="brief != null">
              `brief` = #{brief},
          </if>
          <if test="content != null">
              `content` = #{content},
          </if>
          <if test="url != null">
              `url` = #{url},
          </if>
          <if test="state != null">
              `state` = #{state}
          </if>
          <if test="tags != null">
              `tags` = #{tags}
          </if>
      </set>
      WHERE id=#{id};
    </update>

    <select id="selectById" parameterType="int" resultType="com.isyxf.blog.entity.Article">
        SELECT
        article.content,,<include refid="field"/>
        WHERE article.id=#{id};
    </select>

    <select id="selectPage" resultType="com.isyxf.blog.entity.Article">
      SELECT
        article.brief,<include refid="field"/>
      ORDER BY gmt_create
    </select>

    <select id="archiveList" resultType="com.isyxf.blog.entity.Article">
      SELECT
        <include refid="field"/>
        ORDER BY gmt_create DESC;
    </select>
</mapper>