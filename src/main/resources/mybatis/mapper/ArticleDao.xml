<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isyxf.blog.dao.ArticleDao">
    <resultMap id="articleResultMap" type="com.isyxf.blog.entity.Article">
        <result property="id" column="id" javaType="long"/>
        <result property="gtmCreate" column="gtm_create" javaType="Date"/>
        <result property="gtmModify" column="gtm_modify" javaType="Date"/>
        <result property="classifyId" column="classify_id" javaType="long"/>
        <result property="title" column="title" javaType="String"/>
        <result property="desc" column="desc" javaType="String"/>
        <result property="content" column="content" javaType="String"/>
        <result property="url" column="url" javaType="String"/>
        <result property="state" column="state" javaType="Integer"/>
    </resultMap>
    <insert id="insert">

    </insert>

    <delete id="delete" parameterType="long">
      DELETE FROM article WHERE id=#{id}
    </delete>

    <update id="update">

    </update>

    <select id="selectById" parameterType="long" resultMap="articleResultMap">
      SELECT * FROM article WHERE id=#{id}
    </select>

    <select id="selectAll" resultMap="articleResultMap">
      SELECT * FROM article order by gmt_create
    </select>
</mapper>